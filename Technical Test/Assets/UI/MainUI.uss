.button {
    height: 100%;
    width: auto;
    flex-grow: 1;
    flex-wrap: nowrap;
    color: rgb(255, 255, 255);
    background-color: rgb(24, 24, 24);
    font-size: 20px;
    border-left-color: rgba(255, 255, 255, 0);
    border-right-color: rgba(255, 255, 255, 0);
    border-top-color: rgba(255, 255, 255, 0);
    border-bottom-color: rgba(255, 255, 255, 0);
    border-left-width: 5px;
    border-right-width: 5px;
    border-top-width: 5px;
    border-bottom-width: 5px;
}

.horizontal-list {
    justify-content: center;
    align-items: flex-end;
    flex-direction: row;
    flex-grow: 1;
    flex-shrink: 1;
    opacity: 1;
    flex-basis: auto;
    position: absolute;
    bottom: 0;
    width: 100%;
    flex-wrap: nowrap;
    height: 100%;
}

.button-image {
    justify-content: center;
    background-image: url('project://database/Assets/Sprites/home.png?fileID=2800000&guid=6cd3c237b667aa14e84795ce86626c5c&type=3#home');
    -unity-background-scale-mode: scale-to-fit;
    background-color: rgba(0, 0, 0, 0);
    flex-grow: 1;
    margin-left: 5px;
    margin-right: 5px;
    margin-top: 5px;
    margin-bottom: 5px;
    padding-left: 0;
    padding-right: 0;
}

.button:hover {
    border-left-color: rgb(255, 255, 255);
    border-right-color: rgb(255, 255, 255);
    border-top-color: rgb(255, 255, 255);
    border-bottom-color: rgb(255, 255, 255);
}

.button:active {
    border-left-color: rgb(107, 255, 147);
    border-right-color: rgb(107, 255, 147);
    border-top-color: rgb(107, 255, 147);
    border-bottom-color: rgb(107, 255, 147);
}

.special-button {
    background-image: url('project://database/Assets/Sprites/heart.png?fileID=2800000&guid=d8cd34410d2a0744c9afcd6a8541e307&type=3#heart');
    width: 100%;
    height: 50px;
    background-color: rgba(88, 88, 88, 0);
    border-left-color: rgba(255, 255, 255, 0);
    border-right-color: rgba(255, 255, 255, 0);
    border-top-color: rgba(255, 255, 255, 0);
    border-bottom-color: rgba(255, 255, 255, 0);
    align-items: center;
    justify-content: center;
}
